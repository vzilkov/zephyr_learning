{
    "name": "Zephyr dev container",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
    },
    "mounts": [
        {   
            "source": "${localWorkspaceFolder}",
            "target": "/app/zephyr_learning",
            "type": "bind",
            "consistency": "cached",
            "readOnly": false,
            "options": "bind-propagation=rw"
        },
        {
            "source": "${env:HOME}/.gitconfig",
            "target": "/home/${containerUser}/.gitconfig",
            "type": "bind",
            "consistency": "cached",
            "readOnly": true,
            "options": "bind-propagation=r"
        }
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bash/bin"
    },
    "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools",
        "github.vscode-pull-request-github",
        // "nordic-semiconductor.nrf-devicetree"
    ],
    "forwardPorts": [80, 443, 1234],
    "workspaceFolder": "/app/zephyr_learning"
}