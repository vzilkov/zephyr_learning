{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "/app/zephyr-sdk-0.17.0/sysroots/x86_64-pokysdk-linux/usr/bin/qemu-system-i386",
            "args": [
                "-kernel", "/app/zephyr_learning/build/debug/zephyr/zephyr.elf",
                "-m", "32",
                "-cpu", "qemu32,+nx,+pae",
                "-machine", "q35",
                "-no-reboot", "-nographic",
                "-icount", "shift=10",
                "-s", "-S"
            ],
            "isBackground": true,
            "problemMatcher": [
            {
                "owner": "cpp",
                "pattern": [
                    {
                        "regexp": "^(.*?):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ],
            }
        ]
        }
    ]
}